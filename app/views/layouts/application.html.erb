<!DOCTYPE html>
<html>
<head>
  <title>PictureGame</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
</head>
<body>

<h1 style="margin: 0 auto; text-align: center;">The Picture Game</h1>

</div>

<% if signed_in? %>
<div class="wrap">
<input type="checkbox" id="nav-trigger" class="nav-trigger" />
<label for="nav-trigger"><span></span></label>

<ul class="dropdownnav shadows">
	<li><%= link_to 'My Profile', user_path(current_user) %></li>
	<li><%= link_to 'All Users', users_path %></li>
	<li><%= link_to 'All Games', games_path %></li>
	<li><%= link_to 'Sign Out',  signout_path, :method => :delete, class: 'btn-clear btn-destroy shadows' %></li>
</ul>
</div>
<% end %>

<%= yield %>

<script>
    var pattern = Trianglify({
        width: $(document).width(),
        height: $(document).height()
    });
    //document.body.appendChild(pattern.png())
    $('body').css('background-image', 'url(' + pattern.png() + ')');
    //$('body').css('background-image', pattern.png());
</script>

</body>
</html>
