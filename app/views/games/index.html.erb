<div class="index">
	<% @games.each do |game| %>
		<%= render "gamelistitem", :game => game %>
	<% end %>
	<% if @games.length == 0 %>
		<h3>There are no games in progress!</h3>
		<h3>You should start one!</h3>
		<%= link_to "New Game", new_game_path, class: 'btn-clear btn-submit shadows' %>
	<% end %>
</div>
