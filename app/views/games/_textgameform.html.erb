<%= form_for @game do |f| %>
    <label class="" for="game_story"></label>
    <textarea class="" type="text" value="" name="game[story]" id="game_story" ></textarea>

    <% if @game.stories.length == 0 %>
    	<label class="" for="game_num_rounds">Total Turns: </label>
    	<input class="" type="number" value="4" name="game[num_rounds]" id="game_num_rounds" min="4" max="10" />
    	<input type="submit" name="commit" value="Create Game" class="btn btn-create" />
    <% else %>
    	<input type="submit" name="commit" value="Update Game" class="btn btn-submit" />
    <% end %>
    
<% end %>
