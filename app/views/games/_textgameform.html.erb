<%= form_for @game, :html => {class: 'form-fixed'} do |f| %>
    <label class="" for="game_story"></label>
    <textarea class="inp-text inp-text-accent shadows" type="text" value="" name="game[story]" id="game_story" ></textarea>

    <% if @game.stories.length == 0 %>
    	<label class="" for="game_num_rounds">Total Turns: </label>
    	<input class="inp-text inp-text-accent shadows" type="number" value="4" name="game[num_rounds]" id="game_num_rounds" min="4" max="12" />
    	<input type="submit" name="commit" value="Create Game" class="btn btn-accent shadows" />
    <% else %>
    	<input type="submit" name="commit" value="Update Game" class="btn btn-accent shadows" />
    <% end %>
    
<% end %>
